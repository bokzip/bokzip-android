<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 하이퍼링크 밑줄 나타내기-->
    <style name="Hyperlink">
        <item name="android:textColor">#3498db</item>
        <item name="android:background">@drawable/hyperlink_underline</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_medium</item>
        <item name="android:textSize">15dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="category_text_style">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/noto_sans_cjkkr_bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@drawable/selector_category_btn_text_color</item>
    </style>

    <style name="category_btn_text_appearance">
        <item name="android:textColor">@drawable/selector_category_btn_text_color</item>
        <item name="fontFamily">@font/noto_sans_cjkkr_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="location_btn_text_appearance">
        <item name="android:textColor">@drawable/selector_location_btn_text_color</item>
        <item name="fontFamily">@font/noto_sans_cjkkr_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="sort_btn_text_appearance">
        <item name="android:textColor">@drawable/selector_sort_btn_text_color</item>
        <item name="fontFamily">@font/noto_sans_cjkkr_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>